{
  "manifest_version": 2,
  "name": "1001TLs Auto Submitter",
  "version": "1.0",
  "permissions": ["tabs", "activeTab", "http://*/*", "https://*/*"],
  "background": {
    "scripts": ["src/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["src/content.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icons/off_icon.png",
    "default_popup": "src/popup.html"
  }
}
