{
  "manifest_version": 3,
  "name": "1001TLs Auto Submitter",
  "version": "1.0",
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "icons/off_icon.png"
    }
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["src/content.js"]
    }
  ]
}
